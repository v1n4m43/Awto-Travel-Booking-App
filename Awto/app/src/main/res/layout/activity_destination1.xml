<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    android:minWidth="19dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:background="#F7FFFFFF"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewCount">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7FFFFFF"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/primary"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/awtoimg"
                        android:layout_marginEnd="230dp"
                        android:layout_marginStart="-40dp"
                        android:layout_marginRight="230dp"
                        android:layout_marginLeft="-40dp"
                        android:contentDescription="@string/desc"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/awtotxt"
                        android:layout_marginEnd="170dp"
                        android:layout_marginTop="35dp"
                        android:contentDescription="@string/desc"
                        android:layout_marginRight="170dp"
                        />

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <SearchView
                    android:layout_marginTop="12dp"
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:iconifiedByDefault="false"
                    android:background="@drawable/search_outline"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp">

                <Button
                    android:id="@+id/btn_driver"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:text="@string/drivers"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/btn_destination"
                    android:layout_width="95dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="160dp"
                    android:text="@string/destination"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:layout_marginRight="160dp"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:id="@+id/btn_vehicle"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:text="@string/vehicles"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:src="@drawable/batanes"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/desc"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"

                    />

                <TextView
                    android:id="@+id/txtDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/batanes"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/imageView"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/secondary"
                    android:layout_below="@id/txtDestination"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/txtGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gallery"
                    android:layout_below="@+id/txtDestination"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"/>


                <ImageView
                    android:id="@+id/imgGallery1"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:src="@drawable/batanes1"
                    android:layout_below="@+id/txtGallery"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/desc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp" />


                <ImageView
                    android:id="@+id/imgGallery2"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/txtGallery"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="140dp"
                    android:layout_marginRight="135dp"
                    android:contentDescription="@string/desc"
                    android:scaleType="fitXY"
                    android:src="@drawable/batanes2"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:id="@+id/imgGallery3"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:src="@drawable/batanes3"
                    android:layout_below="@+id/txtGallery"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/desc"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/txtAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:layout_below="@id/imgGallery1"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/txtDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/batanesDesc"
                    android:textColor="@color/black"
                    android:layout_below="@+id/txtAbout"
                    android:gravity="fill_vertical"
                    android:layout_margin="12dp"
                    android:justificationMode="inter_word"
                    tools:ignore="UnusedAttribute"
                    />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/startBooking"
                    android:id="@+id/bookBtn"
                    android:layout_below="@id/txtDesc"
                    android:layout_margin="20dp"
                    android:background="@color/primary"

                    />
                <TextView
                    android:id="@+id/rvws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviews"
                    android:layout_below="@+id/bookBtn"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="12dp" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:numStars="5"
                    android:layout_below="@id/rvws"
                    android:stepSize="0.5"
                    android:rating="2.5"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/secondary"
                    android:layout_below="@id/ratingBar"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/rateTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate"
                    android:layout_below="@+id/view1"
                    android:textColor="@color/primary"
                    android:layout_marginStart="12dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="12dp"
                    />




                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:src="@drawable/lucifer"
                    android:layout_height="50dp"
                    android:layout_below="@id/rateTxt"
                    android:id="@+id/roundDP"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/cmmnt"
                    android:layout_below="@id/rateTxt"
                    android:background="@drawable/comment_outline"
                    android:ems="10"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/cmmnt"
                    android:textColorHint="#757171"
                    android:autofillHints="@string/cmmnt"
                    android:inputType="textLongMessage" />

                <ImageView
                    android:id="@+id/icSend"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_send_24"
                    android:layout_below="@id/rateTxt"
                    android:layout_marginTop="7dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:contentDescription="@string/desc"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp" />


                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/primary"
                    android:layout_below="@id/icSend"
                    android:layout_marginTop="40dp"

                    />


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer_menu"
        android:background="@color/primary">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>