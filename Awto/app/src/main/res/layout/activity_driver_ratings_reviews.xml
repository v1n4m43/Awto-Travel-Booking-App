<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    android:minWidth="19dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:background="#F7FFFFFF"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewCount">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7FFFFFF"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/primary"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/awtoimg"
                        android:layout_marginEnd="230dp"
                        android:layout_marginStart="-40dp"
                        android:layout_marginRight="230dp"
                        android:layout_marginLeft="-40dp"
                        android:contentDescription="@string/desc"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/awtotxt"
                        android:layout_marginEnd="170dp"
                        android:layout_marginTop="35dp"
                        android:contentDescription="@string/desc"
                        android:layout_marginRight="170dp"
                        />

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rtngsRvws"
                    android:textColor="@color/primary"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    />
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/secondary"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/textview1"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:src="@drawable/lucifer"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:id="@+id/roundDP"
                    android:layout_marginStart="18dp"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/passName1"
                    android:textColor="@color/primary"
                    android:textSize="17sp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@+id/roundDP"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/roundDP" />

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:src="@drawable/stars"
                    android:layout_below="@id/textview2"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="-15dp"
                    android:layout_marginLeft="75dp"
                    android:contentDescription="@string/desc" />

                    <ImageView
                        android:id="@+id/like1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_like"
                        android:layout_below="@id/star1"
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginLeft="100dp"
                        android:contentDescription="@string/desc"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment"
                    android:layout_below="@id/star1"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="160dp"
                    android:layout_toRightOf="@id/like1"
                    android:layout_marginLeft="160dp"
                    android:contentDescription="@string/desc"
                    android:layout_toEndOf="@id/like1" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:src="@drawable/lucifer"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:id="@+id/roundDP2"
                    android:layout_marginStart="18dp"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/passName2"
                    android:textColor="@color/primary"
                    android:textSize="17sp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@+id/roundDP2"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/roundDP2"
                    android:contentDescription="@string/desc"/>


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star"
                    android:layout_below="@id/textview3"
                    android:layout_marginStart="75dp"
                    android:id="@+id/star2"
                    android:contentDescription="@string/desc"
                    android:layout_marginLeft="75dp" />

                <ImageView
                    android:id="@+id/like2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like"
                    android:layout_below="@id/star2"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginLeft="100dp"
                    android:contentDescription="@string/desc"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment"
                    android:layout_below="@id/star2"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="160dp"
                    android:layout_toRightOf="@id/like2"
                    android:layout_marginLeft="160dp"
                    android:contentDescription="@string/desc"
                    android:layout_toEndOf="@id/like2" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:src="@drawable/lucifer"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:id="@+id/roundDP3"
                    android:layout_marginStart="18dp"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/passName2"
                    android:textColor="@color/primary"
                    android:textSize="17sp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@+id/roundDP3"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/roundDP3"
                    android:contentDescription="@string/desc"/>


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star"
                    android:layout_below="@id/textview4"
                    android:layout_marginStart="75dp"
                    android:id="@+id/star3"
                    android:contentDescription="@string/desc"
                    android:layout_marginLeft="75dp" />

                <ImageView
                    android:id="@+id/like3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like"
                    android:layout_below="@id/star3"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginLeft="100dp"
                    android:contentDescription="@string/desc"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment"
                    android:layout_below="@id/star3"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="160dp"
                    android:layout_toRightOf="@id/like3"
                    android:layout_marginLeft="160dp"
                    android:contentDescription="@string/desc"
                    android:layout_toEndOf="@id/like3" />

            </RelativeLayout>

            <View

                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/secondary"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:src="@drawable/lucifer"
                    android:layout_height="50dp"
                    android:id="@+id/roundDP4"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/cmmnt"
                    android:background="@drawable/comment_outline"
                    android:ems="10"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/reply"
                    android:textColorHint="#757171"
                    android:autofillHints="@string/cmmnt"
                    android:inputType="textLongMessage" />

                <ImageView
                    android:id="@+id/icSend"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_send_24"
                    android:layout_marginTop="7dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:contentDescription="@string/desc"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/primary"
                    android:layout_below="@id/icSend"
                    android:layout_marginTop="40dp"/>

            </RelativeLayout>





        </LinearLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/driver_drawer_menu"
        android:background="@color/primary">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>