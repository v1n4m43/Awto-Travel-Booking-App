<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    android:minWidth="19dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:background="#F7FFFFFF"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewCount">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7FFFFFF"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/primary"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/awtoimg"
                        android:layout_marginEnd="230dp"
                        android:layout_marginStart="-40dp"
                        android:layout_marginRight="230dp"
                        android:layout_marginLeft="-40dp"
                        android:contentDescription="@string/desc"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/awtotxt"
                        android:layout_marginEnd="170dp"
                        android:layout_marginTop="35dp"
                        android:contentDescription="@string/desc"
                        android:layout_marginRight="170dp"
                        />

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <SearchView
                    android:layout_marginTop="12dp"
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:iconifiedByDefault="false"
                    android:background="@drawable/search_outline"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp">

                <Button
                    android:id="@+id/btn_driverBrowse"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:text="@string/drivers"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/btn_destination"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:text="@string/destination"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/btn_driverBrowse"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/btn_driverBrowse"
                    android:layout_marginLeft="5dp" />

                <Button
                    android:id="@+id/btn_vehicle"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="@string/vehicles"
                    android:textColor="@color/black"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/btn_destination"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@id/btn_destination" />
            </RelativeLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popularDstntn"
                android:textSize="20sp"
                android:textColor="@color/primary"
                android:layout_marginStart="12dp"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/secondary"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="40dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="330dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="-94dp"
                        android:layout_marginEnd="2dp"
                        android:contentDescription="@string/desc"
                        android:padding="7dp"
                        android:src="@drawable/calaguas1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calaguas"
                        android:textSize="25sp"
                        android:textColor="@color/primary"
                        android:layout_marginTop="210dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:textStyle="bold"
                        android:padding="10dp"/>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="245dp"
                        android:layout_marginStart="8dp"
                        app:srcCompat="@drawable/ic_baseline_location_on_24"
                        android:layout_marginLeft="8dp"
                        android:contentDescription="@string/desc"
                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/destination"
                        android:textColor="@color/primary"
                        android:layout_marginTop="255dp"
                        android:layout_marginStart="34dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"
                        android:layout_alignParentStart="true"
                        tools:ignore="SmallSp" />


                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/btb_view_outline"
                        android:text="@string/viewDetails"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        />


                </RelativeLayout>



            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="330dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="-94dp"
                        android:layout_marginEnd="2dp"
                        android:contentDescription="@string/desc"
                        android:padding="7dp"
                        android:src="@drawable/tagaytay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tagaytay"
                        android:textSize="25sp"
                        android:textColor="@color/primary"
                        android:layout_marginTop="210dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:textStyle="bold"
                        android:padding="10dp"/>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="245dp"
                        android:layout_marginStart="8dp"
                        app:srcCompat="@drawable/ic_baseline_location_on_24"
                        android:layout_marginLeft="8dp"
                        android:contentDescription="@string/desc"
                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/destination"
                        android:textColor="@color/primary"
                        android:layout_marginTop="255dp"
                        android:layout_marginStart="34dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"
                        android:layout_alignParentStart="true"
                        tools:ignore="SmallSp" />


                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/btb_view_outline"
                        android:text="@string/viewDetails"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        />


                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="330dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="-94dp"
                        android:layout_marginEnd="2dp"
                        android:contentDescription="@string/desc"
                        android:padding="7dp"
                        android:src="@drawable/mayon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mayon"
                        android:textSize="25sp"
                        android:textColor="@color/primary"
                        android:layout_marginTop="210dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:textStyle="bold"
                        android:padding="10dp"/>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="245dp"
                        android:layout_marginStart="8dp"
                        app:srcCompat="@drawable/ic_baseline_location_on_24"
                        android:layout_marginLeft="8dp"
                        android:contentDescription="@string/desc"
                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/destination"
                        android:textColor="@color/primary"
                        android:layout_marginTop="255dp"
                        android:layout_marginStart="34dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"
                        android:layout_alignParentStart="true"
                        tools:ignore="SmallSp" />


                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/btb_view_outline"
                        android:text="@string/viewDetails"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        />


                </RelativeLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>




















































        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer_menu"
        android:background="@color/primary">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>